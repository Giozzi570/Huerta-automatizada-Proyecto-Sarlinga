</div>
<div class="flex flex-wrap justify-center">
    <img src="../css.png" id="css" class="bg-gray-300 p-5 rounded-xl h-32 w-32 m-4" alt="cssLogo">
</div>

<script>
    const openButton = document.querySelector("#css");
   const closeButton = document.querySelector("#closeButtoncss");
   const menu = document.querySelector("#infocss");
   const body = document.querySelector("body")

openButton.addEventListener("click", () => {
   menu.style.display = "block";
   body.style.background = "#222"
});

closeButton.addEventListener("click", () => {
   menu.style.display = "none";
   body.style.background = "initial";
});
</script>

