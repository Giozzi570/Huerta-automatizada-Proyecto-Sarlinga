---
import Git from '../../components/icons/git-hub.astro' ;
import Instagram from '../../components/icons/instagram.astro' ;
import Linkedin from '../../components/icons/linkedin.astro' ;
import Gmail from '../../components/icons/gmail.astro' ;

---



<section id="menuPichi" class="h-auto w-3/4 rounded-md  bg-[#fdecda] border-2 border-black border-double">
    <div class="flex flex-col items-center w-2/3 mx-auto"> 
        <img src="" class="mt-7 rounded-xl" width="600px" alt="">
        <h4>Adriel Benjamin Acosta</h4>
        <div class="flex w-60 justify-between mt-7">
            <Git />
            <Instagram />
            <Gmail />
        </div>
        <i class="mt-7">Lorem ipsum dolor sit amet consectetur adipisicing elit. Laudantium esse, consectetur pariatur ipsa exercitationem voluptates architecto, dolorem nihil vitae veritatis deleniti tempore reprehenderit impedit at debitis nostrum culpa blanditiis quidem.</i>
    </div>

</section>
<script>
    const button = document.querySelector("#buttonPichi");
    const menu = document.querySelector("#menuPichi");

    button.addEventListener("click", () => {
        // Alternar la visibilidad del men√∫
        if (menu.style.display === "none" || menu.style.display === "") {
            menu.style.display = "block";
        } else {
            menu.style.display = "none";
        }
    });
</script>
<style>
svg{
    scale: 1.6;
}
section {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: none;
}
</style>
