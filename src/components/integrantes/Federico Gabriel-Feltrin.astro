<button id="closeButtonFede" class="mt-4 px-6 py-3 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300 transition duration-300">Cerrar</button>

    </div>

</section>
<script>
     const openButton = document.querySelector("#buttonFede");
    const closeButton = document.querySelector("#closeButtonFede");
    const menu = document.querySelector("#menuFede");
    const body = document.querySelector("body")

openButton.addEventListener("click", () => {
    menu.style.display = "block";
    body.style.background = "#222"
});

closeButton.addEventListener("click", () => {
    menu.style.display = "none";
    body.style.background = "initial";
});
</script>
<style>
svg{
    scale: 1.6;
}
section {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: none;
}
</style>
